<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Actividades.RecetasInfo">

    <TextView
        android:id="@+id/activity_recetas_info__titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:text="Planear receta"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toTopOf="@id/activity_recetas_info__logoTop"
        app:layout_constraintBottom_toBottomOf="@id/activity_recetas_info__logoTop"
        app:layout_constraintStart_toStartOf="parent"
        />
    
    <TextView
        android:id="@+id/activity_recetas_info__subtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Para que disfrute de su mejor plato"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/activity_recetas_info__titulo"
        app:layout_constraintEnd_toEndOf="@id/activity_recetas_info__titulo"
        app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__titulo"/>
    
    
    <ImageView
        android:id="@+id/activity_recetas_info__subrayado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/subrayado"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__subtitulo"
        app:layout_constraintStart_toStartOf="@id/activity_recetas_info__subtitulo"
        app:layout_constraintEnd_toEndOf="@id/activity_recetas_info__subtitulo"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__subrayado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_recetas_info__btn_salir"
        android:layout_marginBottom="15dp"
        >
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/activity_recetas_info__label_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo: "
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp"
                />

            <EditText
                android:id="@+id/activity_recetas_info__input_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:inputType="text"
                android:background="@drawable/input_border_background"
                app:layout_constraintStart_toStartOf="@id/activity_recetas_info__label_titulo"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__label_titulo"
                />

            <TextView
                android:id="@+id/activity_recetas_info__label_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Descripcion: "
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__input_titulo"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/activity_recetas_info__input_descripcion"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_below="@id/activity_recetas_info__label_descripcion"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:background="@drawable/input_border_background"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__label_descripcion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/activity_recetas_info__label_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Categoria: "
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__input_descripcion"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/activity_recetas_info__input_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:inputType="text"
                android:background="@drawable/input_border_background"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__label_categoria"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/activity_recetas_info__label_ingrediente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Ingredientes"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__input_categoria"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/activity_recetas_info__input_ingredientes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:inputType="text"
                android:gravity="top"
                android:background="@drawable/input_border_background"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__label_ingrediente"
                />

            <TextView
                android:id="@+id/activity_recetas_info__label_pasos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Pasos"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__input_ingredientes"
                app:layout_constraintStart_toStartOf="parent"
                />

            <EditText
                android:id="@+id/activity_recetas_info__input_pasos"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@drawable/input_border_background"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__label_pasos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/activity_recetas_info__label_valor_energetico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Valor Nutricional"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__input_pasos"
                app:layout_constraintStart_toStartOf="parent"
                />


            <EditText
                android:id="@+id/activity_recetas_info__input_valor_energetico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:inputType="numberDecimal"
                android:background="@drawable/input_border_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/activity_recetas_info__label_valor_energetico"
                />





        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </ScrollView>
        
        

    <ImageView
        android:id="@+id/activity_recetas_info__logoTop"
        android:layout_width="172dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:alpha="0.4"
        android:scaleType="centerInside"
        android:src="@drawable/recetas_info_logo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="265dp"
        android:layout_height="216dp"
        android:adjustViewBounds="true"
        android:alpha="0.4"
        android:scaleType="centerInside"
        android:src="@drawable/recetas_info_logo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/activity_recetas_info__btn_salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="salir"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        />

    <Button
        android:id="@+id/activity_recetas_info__btn_cambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        android:backgroundTint="@color/white"/>



