<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.MainActivity"
    android:background="@color/black"
    android:id="@+id/rootLayout">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_main__cl_headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/header_background"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/activity_main__tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NutriChef"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            android:textSize="30dp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"/>

        <ImageButton
            android:id="@+id/activity_main__btn_add_receta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_post_add_24"
            android:background="@color/negroSecundario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.75"/>


        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_search_24"
            android:background="#1A1A1A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.9"/>

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:textColor="@color/white"
            android:background="@drawable/header_background"
            android:padding="10dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:inputType="text"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/activity_main__tv_labelRecetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_main__cl_headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Disfrute de su seleccion de recetas"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintHorizontal_bias="0.30"
        android:layout_marginTop="25dp"/>
    
    <ImageView
        android:id="@+id/activity_main__iv_subrayado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_main__tv_labelRecetas"
        app:layout_constraintStart_toStartOf="@id/activity_main__tv_labelRecetas"
        app:layout_constraintEnd_toEndOf="@id/activity_main__tv_labelRecetas"
        android:src="@drawable/subrayado"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_marginTop="5dp"/>

    <ListView
        android:id="@+id/activity_main__lv_listaRecetas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_main__iv_subrayado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_main__btn_salir"
        android:divider="@null"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/activity_main__btn_salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Salir"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="15dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>