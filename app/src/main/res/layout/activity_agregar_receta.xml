<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.AgregarReceta"
    android:background="@color/black">

    <ImageView
        android:id="@+id/activity_agregar_receta__iv_logo"
        android:layout_width="182dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:alpha="0.40"
        android:scaleType="centerInside"
        android:src="@drawable/recetas_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_agregar_receta__tv_tiulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Receta"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/activity_agregar_receta__iv_logo"
        app:layout_constraintHorizontal_bias="0.2"
        />

    <TextView
        android:id="@+id/activity_agregar_receta__tv_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creemos una receta a su gusto"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__tv_tiulo"
        app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_tiulo"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/subrayado"
        app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__tv_descripcion"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@id/activity_agregar_receta__tv_descripcion"
        app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_descripcion"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__iv_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_agregar_receta__btn_salir"
        android:layout_marginBottom="15dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/activity_agregar_receta__tv_labelTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:letterSpacing="0.05"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.09"
                />

            <EditText
                android:id="@+id/activity_agregar_receta__et_inputTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_border_background"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__tv_labelTitulo"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelTitulo"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="100dp"
                android:hint="Titulo de tu receta"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:inputType="text"
                />

            <TextView
                android:id="@+id/activity_agregar_receta__tv_labelDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__et_inputTitulo"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelTitulo"
                android:text="Descripcion"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:letterSpacing="0.05"
                />

            <EditText
                android:id="@+id/activity_agregar_receta__et_inputDescripcion"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:background="@drawable/input_border_background"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__tv_labelDescripcion"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelDescripcion"
                app:layout_constraintEnd_toEndOf="@id/activity_agregar_receta__et_inputTitulo"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:hint="Describa su receta"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:inputType="textMultiLine"/>

            <TextView
                android:id="@+id/activity_agregar_receta__tv_labelcategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__et_inputDescripcion"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelTitulo"
                android:text="Categoria"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:letterSpacing="0.05"
                />

            <EditText
                android:id="@+id/activity_agregar_receta__et_inputCategoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_border_background"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__tv_labelcategoria"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelTitulo"
                app:layout_constraintEnd_toEndOf="@id/activity_agregar_receta__et_inputTitulo"
                android:hint="Salado, dulce, pasta, etc."
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:inputType="text"
                />

            <TextView
                android:id="@+id/activity_agregar_receta__tv_labelIngredientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__et_inputCategoria"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelTitulo"
                android:text="Ingredientes"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:letterSpacing="0.05"
                />

            <EditText
                android:id="@+id/activity_agregar_receta__et_inputIngredientes"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:background="@drawable/input_border_background"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__tv_labelIngredientes"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelDescripcion"
                app:layout_constraintEnd_toEndOf="@id/activity_agregar_receta__et_inputTitulo"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:hint="Cuales son los ingredientes de su receta."
                android:textSize="15dp"
                android:textColor="@color/white"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:inputType="textMultiLine"/>

            <TextView
                android:id="@+id/activity_agregar_receta__tv_labelPasos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__et_inputIngredientes"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelTitulo"
                android:text="Pasos"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:letterSpacing="0.05"
                />

            <EditText
                android:id="@+id/activity_agregar_receta__et_inputPasos"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_border_background"
                android:gravity="top"
                android:hint="Cuales son los pasos de su receta."
                android:inputType="textMultiLine"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="@id/activity_agregar_receta__et_inputTitulo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelDescripcion"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__tv_labelPasos" />

            <TextView
                android:id="@+id/activity_agregar_receta__tv_labelValorNutricional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__et_inputPasos"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelTitulo"
                android:text="Valor nutricional"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:letterSpacing="0.05"
                />

            <EditText
                android:id="@+id/activity_agregar_receta__et_inputValorNutricional"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_border_background"
                app:layout_constraintTop_toBottomOf="@id/activity_agregar_receta__tv_labelValorNutricional"
                app:layout_constraintStart_toStartOf="@id/activity_agregar_receta__tv_labelTitulo"
                app:layout_constraintEnd_toEndOf="@id/activity_agregar_receta__et_inputTitulo"
                android:hint="50 kcl"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:inputType="text"
                />







        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



    <Button
        android:id="@+id/activity_agregar_receta__btn_salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALIR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/activity_agregar_receta__btn_continuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        />




</androidx.constraintlayout.widget.ConstraintLayout>